<div class="container-fluid visible-xs search_bar__mobile">
  <%= form_tag search_path, :method => "get" do %>
    <div class="row">
      <div class="col-xs-4">
        <%= image_tag "Auswahl_001.png", :class => "img-rounded search__image__mobile" %>
      </div>
      <div class="col-xs-4">
        <%= image_tag "Auswahl_002.png", :class => "img-rounded search__image__mobile" %>
      </div>
      <div class="col-xs-4">
        <%= image_tag "Auswahl_003.png", :class => "img-rounded search__image__mobile" %>
      </div>
    </div>
    <div class="row" style="margin-top:4%;">
      <div class="col-xs-4">
        <%= text_field_tag :size_collar, params[:size_collar], :class => "search__field__mobile",:placeholder => "Kragen (cm)" %>
      </div>
      <div class="col-xs-4">
        <%= text_field_tag :size_bust, params[:size_bust], :class => "search__field__mobile", :placeholder => "Brust (cm)" %>
      </div>
      <div class="col-xs-4">
        <%= text_field_tag :size_waist, params[:size_waist], :class => "search__field__mobile", :placeholder => "Taille (cm)" %>
      </div>
    </div>
    <div class="row" style="margin-top:4%;">
      <div class="col-xs-12">
          <%= button_tag(type: "submit", class: "btn btn-primary btn-large search__button__mobile pull-right") do %>
              <span class="glyphicon glyphicon-search"></span> finde meine Hemden
          <% end %>
      </div>
    </div>
  <% end %>
</div><!--/.fluid-container-->