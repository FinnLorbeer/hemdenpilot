<div class="container-fluid visible-xs" style="margin-top:55px;">
  <%= form_tag search_path, :method => "get" do %>
      <div class="well">
        <div class="row" style="margin-top:10px;">
          <div class="col-xs-4">
            <%= image_tag "Auswahl_001.png", :class => "img-rounded", :style => "width:94px; margin-left:10px;" %>
          </div>
          <div class="col-xs-4">
            <%= image_tag "Auswahl_002.png", :class => "img-rounded", :style => "width:94px; margin-left:10px;" %>
          </div>
          <div class="col-xs-4">
            <%= image_tag "Auswahl_003.png", :class => "img-rounded", :style => "width:94px; margin-left:10px;" %>
          </div>
        </div>
        <div class="row" style="margin-top:10px;">
          <div class="col-xs-4">
            <%= text_field_tag :halsweite, params[:halsweite], :style => "width:115px; padding:15px;",:placeholder => "Kragen (cm)" %>
          </div>
          <div class="col-xs-4">
            <%= text_field_tag :oberweite, params[:oberweite], :style => "width:115px; padding:15px;", :placeholder => "Brust (cm)" %>
          </div>
          <div class="col-xs-4">
            <%= text_field_tag :taillenweite, params[:taillenweite], :style => "width:115px; padding:15px;", :placeholder => "Taille (cm)" %>
          </div>
        </div>
        <div class="row" style="margin-top:10px;">
          <%= button_tag(type: "submit", class: "btn btn-primary btn-large", :style => "font-size:20px; font-weight:bold; padding: 15px; margin-left:30px;") do %>
              <span class="glyphicon glyphicon-search"></span> finde meine Hemden
          <% end %>
        </div>
      </div> <!-- /.well -->
  <% end %>
</div><!--/.fluid-container-->