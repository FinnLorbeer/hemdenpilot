<div class="container-fluid hidden-xs">
  <%= form_tag search_path, :method => "get" do %>  
    <div class="search-bar">
      <div class="row" style="margin-left:10px; color:white;">
        <h2> HEMDENPILOT </h2>
        <h4> Finde dein passendes Hemd</h4>
      </div>
      <div class="row" style="margin:10px;">
        <div class="col-xs-4">
          <label for="collar">
            <%= image_tag "Auswahl_001.png", :class => "img-rounded search__image" %>
          </label>
        </div>
        <div class="col-xs-4">
          <label for="bust">
            <%= image_tag "Auswahl_002.png", :class => "img-rounded search__image" %>
          </label>
        </div>
        <div class="col-xs-4">
          <label for="waist">
            <%= image_tag "Auswahl_003.png", :class => "img-rounded search__image" %>
          </label>
        </div>
      </div>
      <div class="row" style="margin:10px;">
        <div class="col-xs-4">
          <%= text_field_tag :size_collar, params[:size_collar], :id => "collar", :class => "search__field", :placeholder => "Kragen (cm)" %>
        </div>
        <div class="col-xs-4">
          <%= text_field_tag :size_bust, params[:size_bust], :id => "bust", :class => "search__field", :placeholder => "Brust (cm)" %>
        </div>
        <div class="col-xs-4">
          <%= text_field_tag :size_waist, params[:size_waist], :id => "waist", :class => "search__field", :placeholder => "Taille (cm)" %>
        </div>
      </div>
      <div class="row" style="margin:40px;">
        <%= button_tag(type: "submit", class: "btn btn-primary btn-large pull-right", :style => "font-size:20px; font-weight:bold; padding: 15px; margin-left:30px;") do %>
          <span class="glyphicon glyphicon-search"></span> finde meine Hemden
        <% end %>
        </div>
    </div> <!-- /.well -->
  <% end %>
</div><!--/.fluid-container--> </div>