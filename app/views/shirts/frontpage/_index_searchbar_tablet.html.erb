<div class="container-fluid visible-sm">
  <%= form_tag search_path, :method => "get" do %>
      <div class="search-bar__tablet">
        <div class="row" style="margin-left:20px; margin-top:5px;">
          <h4> Finde dein passendes Hemd </h4>
        </div>
        <div class="row" style="margin-top:20px;">
          <div class="col-xs-4">
            <label for="collar">
              <%= image_tag "Auswahl_001.png", :class => "img-rounded search__image__tablet" %>
            </label>
          </div>
          <div class="col-xs-4">
            <label for="bust">
              <%= image_tag "Auswahl_002.png", :class => "img-rounded search__image__tablet" %>
            </label>
          </div>
          <div class="col-xs-4">
            <label for="waist">
              <%= image_tag "Auswahl_003.png", :class => "img-rounded search__image__tablet" %>
            </label>
          </div>
        </div>
        <div class="row" style="margin-top:7px;">
          <div class="col-xs-4">
            <%= text_field_tag :size_collar, params[:size_collar], :id => "collar", :class => "search__field__tablet", :placeholder => "Kragen (cm)" %>
          </div>
          <div class="col-xs-4">
            <%= text_field_tag :size_bust, params[:size_bust], :id => "bust", :class => "search__field__tablet", :placeholder => "Brust (cm)" %>
          </div>
          <div class="col-xs-4">
            <%= text_field_tag :size_waist, params[:size_waist], :id => "waist", :class => "search__field__tablet", :placeholder => "Taille (cm)" %>
          </div>
        </div>
        <div class="row" style="margin-top:15px;">
          <div class="col-xs-12">
            <%= button_tag(type: "submit", class: "btn btn-primary btn-large search__button__mobile pull-right") do %>
                <span class="glyphicon glyphicon-search"></span> finde meine Hemden
            <% end %>
          </div>
        </div>
      </div> <!-- /.well -->
  <% end %>
</div><!--/.fluid-container--> </div>