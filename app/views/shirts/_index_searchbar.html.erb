<div class="container-fluid hidden-xs" style="top:100px; left:5%; tabindex:+1; position:absolute;">
	<%= form_tag search_path, :method => "get" do %>	
		<div class="well" style="min-width:300px; background-color: grey; padding-top:7px; padding-left:13px; padding-right:13px; padding-bottom:7px; background-color: rgba(100,100,100,0.7);">
			<div class="row" style="margin-left:10px; color:white;">
				<h1> Hemdenpilot </h1>
			</div>
			<div class="row" style="margin:10px;">
				<div class="col-xs-4">
					<%= image_tag "Auswahl_001.png", :class => "img-rounded", :style => "width:94px;" %>
				</div>
				<div class="col-xs-4">
					<%= image_tag "Auswahl_002.png", :class => "img-rounded", :style => "width:94px;" %>
				</div>
				<div class="col-xs-4">
					<%= image_tag "Auswahl_003.png", :class => "img-rounded", :style => "width:94px;" %>
				</div>
			</div>
			<div class="row" style="margin:10px;">
				<div class="col-xs-4">
					<%= text_field_tag :size_collar, params[:size_collar], :style => "width:94px; padding:5px;",:placeholder => "Kragen (cm)" %>
				</div>
				<div class="col-xs-4">
					<%= text_field_tag :size_bust, params[:size_bust], :style => "width:94px; padding:5px;", :placeholder => "Brust (cm)" %>
				</div>
				<div class="col-xs-4">
					<%= text_field_tag :size_waist, params[:size_waist], :style => "width:94px; padding:5px;", :placeholder => "Taille (cm)" %>
				</div>
			</div>
			<div class="row" style="margin:10px;">
				<%= submit_tag "finde meine Hemden", :name => nil, :class => "btn btn-success btn-large pull-right", :style => "font-size:20px; font-weight:bold; padding: 15px; margin-left:30px;"%>
			</div>
		</div> <!-- /.well -->
	<% end %>
</div><!--/.fluid-container--> </div>

